.chat-main__message-list__one{"data-message-id": "#{message.id}"}
  .chat-main__message-list__one--name
    = message.user.name
  .chat-main__message-list__one--time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__one--core
    - if message.content.present?
      %p.chat-main__message-list__one--core__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?




