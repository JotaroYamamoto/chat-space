.chat-main
  .chat-main__group-info
    .chat-main__group-info__left 
      = @group.name
      .chat-main__group-info__left__under
        - @group.group_users.each do |group_user|
          = "Member:#{group_user.user.name}"
    =link_to edit_group_path(@group.id) ,class: "chat-main__group-info__right" do
      Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message--form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-main__message--form__message', placeholder: 'type a message'
      .position
        = f.label :image, class: 'image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'submit'
      


